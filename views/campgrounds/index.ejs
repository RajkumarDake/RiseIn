<% layout('layouts/boilerplate') %> 
<link rel="shortcut icon" href="favicon.svg" type="image/x-icon">
    <div id="cluster-map"></div>

    <div class="riseinn-heading-container">
        <h1 class="my-3 ">All Resorts</h1>
    </div>
    <!-- <div><a href="/campgrounds/new">Add campgound</a></div> -->
   
    <hr>
    <form action="/campgrounds/search" method="GET" novalidate class="search-form validated-form" enctype = "multipart/form-data" data-aos="flip-left">
        <div class="input-group search-campground mb-3 mx-auto p-1" style="max-width: 600px;" >
            <input type="text" class="form-control" placeholder="Search Resorts" aria-label="Search Campgrounds" aria-describedby="basic-addon2" id="campgroundName" name="campgroundName">
            <div class="input-group-append">
                    <button class="btn btn-outline-secondary" style="background-color: rgb(64, 180, 184);">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                    </button>
            </div>
        </div> 
    </form>
<% for(let campground of campgrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.images.length){ %> 
                <img class="img-fluid" alt="" src="<%= campground.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt="" src="https://res.cloudinary.com/igoswamik/image/upload/v1617456429/YelpCamp/rnxtlbcytd7obessayli.png">
                <% } %>  
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %> </h5>
                    <p class="card-text"><%= campground.description %> </p>
                    <p class="card-text">
                        <small class="text-muted"><%= campground.location %></small>
                    </p>
                    <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary" id="show-button">view <%=campground.title%> </a>
                </div>
            </div>
        </div>
    </div>            
<% } %>  
   
<script>
    const mapToken= '<%-process.env.MAPBOX_TOKEN%>' ;
    const campgrounds={features: <%-JSON.stringify(campgrounds)%>};    //in mapboxClustermap all data ex geometry etc is defined inside an object under features therefore we set campgroungs stringified data under features (https://docs.mapbox.com/mapbox-gl-js/assets/earthquakes.geojson)
</script>
<script src="/javascripts/clusterMap.js"></script>